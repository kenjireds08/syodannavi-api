{
  "version": 2,
  "engines": {
    "node": "20.x"
  },
  "buildCommand": "npm run vercel-build || npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
